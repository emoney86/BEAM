
<header>
  <div class="container">
   <div class="row">
    <div class="col-lg-12">
      <img class="img-responsive" src="img/portfolio/cake.png" alt="">
      <div class="intro-text" id="intro-id">
       <span class="skills">Find the best (and cheapest) food in the hood</span>
       <hr class="star-light">
       <% if current_user %>
         <span class="user-buttons btn btn-success"><a href="/logout">Logout</a></span>
       <% else %>
         <a href="#login-box" class="login-window"><span class="user-buttons btn btn-success">Login</span></a>

         <a href="#signup-box" class="signup-window"><span class="user-buttons btn btn-success">Signup</span></a>
       <% end %>
      </div>
    </div>
   </div>
  </div>
</header>



<%= erb :_login_form %>
<%= erb :_signup_form %>




